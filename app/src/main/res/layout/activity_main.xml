<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:src="@drawable/ic_background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <GridLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:layout_gravity="center"
            android:layout_margin="10dp">

                <TextView
                    android:id="@+id/view_result"
                    android:layout_margin="5dp"
                    android:layout_columnSpan="4"
                    android:layout_rowSpan="2"
                    android:layout_gravity="fill"
                    android:hint="@string/results"
                    android:textSize="35sp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp"/>

                <TextView
                    android:id="@+id/view_input"
                    android:layout_margin="10dp"
                    android:layout_columnSpan="4"
                    android:layout_rowSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:hint="@string/input"
                    android:textSize="35sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/input_view"
                    android:gravity="end"/>

                <Button
                    android:id="@+id/key_ac"
                    style="@style/calc_button"
                    app:backgroundTint="@color/action_button"
                    android:text="@string/key_ac"
                    />

                <Button
                    android:id="@+id/key_del"
                    style="@style/calc_button"
                    app:backgroundTint="@color/action_button"
                    android:background="@drawable/ic_baseline_backspace_24"/>

                <Button
                    android:id="@+id/key_percentage"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_percentage" />

                <Button
                    android:id="@+id/key_division"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_division" />

                <Button
                    android:id="@+id/key_1"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_1" />

                <Button
                    android:id="@+id/key_2"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_2" />

                <Button
                    android:id="@+id/key_3"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_3" />

                <Button
                    android:id="@+id/key_multiplication"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_multiplication" />

                <Button
                    android:id="@+id/key_4"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_4" />

                <Button
                    android:id="@+id/key_5"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_5" />

                <Button
                    android:id="@+id/key_6"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_6" />

                <Button
                    android:id="@+id/key_subtraction"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_subtraction"/>

                <Button
                    android:id="@+id/key_7"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_7" />

                <Button
                    android:id="@+id/key_8"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_8" />

                <Button
                    android:id="@+id/key_9"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_9" />

                <Button
                    android:id="@+id/key_addition"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_addition"/>

                <Button
                    android:id="@+id/key_dot"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_dot" />

                <Button
                    android:id="@+id/key_0"
                    style="@style/calc_button"
                    app:backgroundTint="@color/calc_button"
                    android:text="@string/key_0" />

                <Button
                    android:id="@+id/key_result"
                    style="@style/calc_button"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    app:backgroundTint="@color/action_button"
                    android:text="@string/key_result"/>

            </GridLayout>

</FrameLayout>
