<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/view_result"
        style="@style/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/keyboard"
        app:layout_constraintEnd_toStartOf="@id/keyboard"
        app:layout_constraintBottom_toTopOf="@id/view_input"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/view_input"
        style="@style/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_result"
        app:layout_constraintEnd_toStartOf="@id/keyboard"
        app:layout_constraintBottom_toBottomOf="@id/keyboard"
        />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/keyboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/main_margin"
        android:foregroundGravity=""
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_ac"
            style="@style/calc_button"
            android:backgroundTint="@color/action_button"
            android:text="@string/key_ac"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/key_del"
            app:layout_constraintBottom_toTopOf="@id/key_1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_del"
            style="@style/calc_button"
            android:backgroundTint="@color/action_button"
            app:icon="@drawable/ic_baseline_backspace_24"
            app:iconSize="@dimen/main_text"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/iconPadding"
            app:layout_constraintStart_toEndOf="@id/key_ac"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/key_percentage"
            app:layout_constraintBottom_toTopOf="@id/key_2"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_percentage"
            style="@style/calc_button"
            android:text="@string/key_percentage"
            app:layout_constraintStart_toEndOf="@id/key_del"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/key_division"
            app:layout_constraintBottom_toTopOf="@id/key_3"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_division"
            style="@style/calc_button"
            android:text="@string/key_division"
            app:layout_constraintStart_toEndOf="@id/key_percentage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/key_multiplication"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_1"
            style="@style/calc_button"
            android:text="@string/key_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/key_ac"
            app:layout_constraintEnd_toStartOf="@id/key_2"
            app:layout_constraintBottom_toTopOf="@id/key_4"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_2"
            style="@style/calc_button"
            android:text="@string/key_2"
            app:layout_constraintStart_toEndOf="@id/key_1"
            app:layout_constraintTop_toBottomOf="@id/key_del"
            app:layout_constraintEnd_toStartOf="@id/key_3"
            app:layout_constraintBottom_toTopOf="@id/key_5"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_3"
            style="@style/calc_button"
            android:text="@string/key_3"
            app:layout_constraintStart_toEndOf="@id/key_2"
            app:layout_constraintTop_toBottomOf="@id/key_percentage"
            app:layout_constraintEnd_toStartOf="@id/key_multiplication"
            app:layout_constraintBottom_toTopOf="@id/key_6"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_multiplication"
            style="@style/calc_button"
            android:text="@string/key_multiplication"
            app:layout_constraintStart_toEndOf="@id/key_3"
            app:layout_constraintTop_toBottomOf="@id/key_division"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/key_subtraction"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_4"
            style="@style/calc_button"
            android:text="@string/key_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/key_1"
            app:layout_constraintEnd_toStartOf="@id/key_5"
            app:layout_constraintBottom_toTopOf="@id/key_7"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_5"
            style="@style/calc_button"
            android:text="@string/key_5"
            app:layout_constraintStart_toEndOf="@id/key_4"
            app:layout_constraintTop_toBottomOf="@id/key_2"
            app:layout_constraintEnd_toStartOf="@id/key_6"
            app:layout_constraintBottom_toTopOf="@id/key_8"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_6"
            style="@style/calc_button"
            android:text="@string/key_6"
            app:layout_constraintStart_toEndOf="@id/key_5"
            app:layout_constraintTop_toBottomOf="@id/key_3"
            app:layout_constraintEnd_toStartOf="@id/key_subtraction"
            app:layout_constraintBottom_toTopOf="@id/key_9"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_subtraction"
            style="@style/calc_button"
            android:text="@string/key_subtraction"
            app:layout_constraintStart_toEndOf="@id/key_6"
            app:layout_constraintTop_toBottomOf="@id/key_multiplication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/key_addition"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_7"
            style="@style/calc_button"
            android:text="@string/key_7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/key_4"
            app:layout_constraintEnd_toStartOf="@id/key_8"
            app:layout_constraintBottom_toTopOf="@id/key_dot"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_8"
            style="@style/calc_button"
            android:text="@string/key_8"
            app:layout_constraintStart_toEndOf="@id/key_7"
            app:layout_constraintTop_toBottomOf="@id/key_5"
            app:layout_constraintEnd_toStartOf="@id/key_9"
            app:layout_constraintBottom_toTopOf="@id/key_0"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_9"
            style="@style/calc_button"
            android:text="@string/key_9"
            app:layout_constraintStart_toEndOf="@id/key_8"
            app:layout_constraintTop_toBottomOf="@id/key_6"
            app:layout_constraintEnd_toStartOf="@id/key_addition"
            app:layout_constraintBottom_toTopOf="@id/key_result"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_addition"
            style="@style/calc_button"
            android:text="@string/key_addition"
            app:layout_constraintStart_toEndOf="@id/key_9"
            app:layout_constraintTop_toBottomOf="@id/key_subtraction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/key_result"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_dot"
            style="@style/calc_button"
            android:text="@string/key_dot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/key_7"
            app:layout_constraintEnd_toStartOf="@id/key_0"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_0"
            style="@style/calc_button"
            android:text="@string/key_0"
            app:layout_constraintStart_toEndOf="@id/key_dot"
            app:layout_constraintTop_toBottomOf="@id/key_8"
            app:layout_constraintEnd_toStartOf="@id/key_result"
            app:layout_constraintHorizontal_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_result"
            style="@style/calc_button"
            android:backgroundTint="@color/action_button"
            android:text="@string/key_result"
            app:layout_constraintStart_toEndOf="@id/key_0"
            app:layout_constraintTop_toBottomOf="@id/key_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key_switch_theme"
        android:textSize="@dimen/small_text"
        android:text="@string/switch_theme"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="0dp"
        android:backgroundTint="@color/action_button"
        app:layout_constraintTop_toTopOf="@id/view_result"
        app:layout_constraintStart_toStartOf="@id/view_result"
        />


</androidx.constraintlayout.widget.ConstraintLayout>